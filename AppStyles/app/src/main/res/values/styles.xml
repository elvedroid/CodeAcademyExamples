<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="android:textViewStyle">@style/TextViewLight</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#444444</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@android:color/holo_blue_dark</item>
        <item name="android:windowBackground">#999999</item>
        <item name="editTextStyle">@style/EditTextStyleDark</item>
        <item name="android:textViewStyle">@style/TextViewDark</item>
    </style>
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_edittext_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="EditTextStyleDark" parent="Widget.AppCompat.EditText">

        <item name="android:background">@drawable/rounded_edittext_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="ButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ButtonStyle.RedButton" >
        <item name="android:background">@drawable/roundedbutton_red</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ButtonStyle.WhiteButton" >
        <item name="android:background">@drawable/roundedbutton_white</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>
    <style name="TextViewLight">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="TextViewDark">
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>

